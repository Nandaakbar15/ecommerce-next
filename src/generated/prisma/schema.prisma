generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id     Int      @id @default(autoincrement())
  email  String   @unique
  name   String?
  orders Orders[]

  @@map("users")
}

model Category {
  id_kategori Int      @id @default(autoincrement())
  name        String
  quantity    Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  products Product[]

  @@map("product_category")
}

model Product {
  id_produk   Int      @id @default(autoincrement())
  id_kategori Int
  name        String
  description String
  stock       Int      @default(0)
  image       String? // nullable
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  category Category @relation(fields: [id_kategori], references: [id_kategori])
  orders   Orders[]

  @@map("product")
}

model Orders {
  id_pesanan Int      @id @default(autoincrement())
  user_id    Int
  id_produk  Int
  quantity   Int
  total      Decimal  @db.Decimal(10, 2)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  product Product @relation(fields: [id_produk], references: [id_produk])
  user    User    @relation(fields: [user_id], references: [id])

  @@map("orders")
}

model Employee {
  id_karyawan Int    @id @default(autoincrement())
  nama        String
  alamat      String
  no_hp       String
  jabatan     String
}
